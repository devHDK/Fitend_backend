{
  "type": "object",
  "properties": {
    "trainerId": {
      "type": "integer"
    },
    "title": {
      "type": "string",
      "maxLength": 40
    },
    "content": {
      "type": "string"
    },
    "isMeetingThread": {
      "type": "boolean",
      "nullable": true
    },
    "gallery": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["image", "video"]
          },
          "url": {
            "type": "string"
          },
          "thumbnail": {
            "type": "string"
          }
        }
      }
    }
  },

  "required": ["trainerId", "content"],
  "additionalProperties": false
}

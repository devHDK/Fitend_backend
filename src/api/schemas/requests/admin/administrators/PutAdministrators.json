      "pattern": "^[0-9a-zA-Z!_]{4,20}$"
    },
    "password": {
      "type": "string",
      "pattern": "^[0-9a-zA-Z!@#$%^&*()?+-_~=/]{6,40}$"
    }
  },
  "required": ["username"],
  "additionalProperties": false
}

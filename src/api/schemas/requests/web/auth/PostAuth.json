{
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string",
      "pattern": "^[0-9a-zA-Z!@#$%^&*()?+-_~=/]{8,20}$",
      "example": "12341234"
    },
    "platform": {
      "type": "string",
      "enum": ["ios", "android"]
    },
    "deviceId": {
      "type": "string"
    },
    "token": {
      "type": "string"
    }
  },
  "required": ["email", "password"],
  "additionalProperties": false
}
